<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="@dimen/px_900"
        android:layout_height="@dimen/px_600"
        android:layout_centerInParent="true"
        android:background="@mipmap/v2_login_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:layout_marginTop="@dimen/px_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_30"
                android:id="@+id/py_back_button_v2"
                android:src="@mipmap/v2_back_page" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_60"
                android:gravity="center"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/px_400"
                    android:layout_height="match_parent"
                    android:src="@mipmap/v2_bg_title_login"/>


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/px_15"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_80"
                android:background="@mipmap/v2_editetext_view_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/v2_bg_icon_account"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_15"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="@string/py_register_account_hit"
                    android:textSize="@dimen/sp_18"
                    android:id="@+id/py_login_account_v2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_15"
                android:background="@mipmap/v2_editetext_view_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/v2_bg_icon_pwd"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="@dimen/px_15"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="@string/py_register_account_hit"
                    android:textSize="@dimen/sp_18"
                    android:inputType="textPassword"
                    android:id="@+id/py_login_password_v2"
                    />


                <ImageView
                    android:layout_width="@dimen/px_60"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_15"
                    android:padding="@dimen/px_8"
                    android:id="@+id/py_login_password_eye_v2"
                    android:src="@drawable/py_eye_selector_v2"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:layout_marginTop="@dimen/px_15"
            android:gravity="center"
            >

            <ImageView android:layout_width="@dimen/px_30"
                android:layout_height="@dimen/px_30"
                android:src="@drawable/py_btn_checkbox_selector"
                android:id="@+id/py_save_pwd_text_check_id"

                />

            <TextView android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/py_login_save_account"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/px_15"
                android:maxLines="1"
                android:id="@+id/py_save_pwd_text_id"
                android:textColor="@android:color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_15">

            <TextView
                android:layout_width="@dimen/px_420"
                android:layout_height="@dimen/px_60"
                android:id="@+id/v2_member_btn_login"
                android:background="@mipmap/v2_member_btn_login" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px_15">

            <RelativeLayout
                android:layout_width="@dimen/px_500"
                android:layout_height="@dimen/px_60"
                android:gravity="center_vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/py_login_go_changePwd_v2"
                    android:text="@string/py_change_pwd"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/px_20"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/py_login_go_reg_v2"
                    android:text="@string/py_register_account"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    />

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:id="@+id/py_login_go_reg_v2"-->
                    <!--android:src="@mipmap/v2_btn_register_new_account"/>-->

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>